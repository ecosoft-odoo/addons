<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <record id="res_config_settings_view_form" model="ir.ui.view">
        <field name="name">res.config.settings.view.form.fsm</field>
        <field name="model">res.config.settings</field>
        <field name="priority" eval="40"/>
        <field name="inherit_id" ref="base.res_config_settings_view_form"/>
        <field name="arch" type="xml">
            <xpath expr="//div[hasclass('settings')]" position="inside">
                <div class="app_settings_block"
                     data-string="Ecosoft FARM"
                     string="Ecosoft FARM"
                     data-key="ecofarm"
                     groups="ecofarm.group_ecofarm_manager">
                    <h2>System Configurations</h2>
                    <div class="row mt16 o_settings_container">
                        <div class="col-xs-12 col-md-6 o_setting_box">
                            <div class="o_setting_left_pane">
                                <field name="module_account_type_menu"/>
                            </div>
                            <div class="o_setting_right_pane">
                                <label for="module_account_type_menu"
                                       string="Account Menus"/>
                                <div class="text-muted">
                                    Show account type menu, initially hidden by Odoo S.A.
                                </div>
                            </div>
                        </div>
                        <div class="col-xs-12 col-md-6 o_setting_box">
                            <div class="o_setting_left_pane">
                                <field name="module_partner_fax"/>
                            </div>
                            <div class="o_setting_right_pane">
                                <label for="module_partner_fax"
                                       string="Partner Fax data"/>
                                <div class="text-muted">
                                    Additional fax field for partner
                                </div>
                            </div>
                        </div>
                        <div class="col-xs-12 col-md-6 o_setting_box">
                            <div class="o_setting_left_pane">
                                <field name="module_report_xlsx"/>
                            </div>
                            <div class="o_setting_right_pane">
                                <label for="module_report_xlsx"
                                       string="Report XLSX"/>
                                <div class="text-muted">
                                    System tools used to create XLSX report with ease.
                                </div>
                            </div>
                        </div>
                        <div class="col-xs-12 col-md-6 o_setting_box">
                            <div class="o_setting_left_pane">
                                <field name="module_auto_backup"/>
                            </div>
                            <div class="o_setting_right_pane">
                                <label for="module_auto_backup"
                                       string="Database Auto Backup"/>
                                <div class="text-muted">
                                    System tools used to backup database.
                                </div>
                            </div>
                        </div>
                        <div class="col-xs-12 col-md-6 o_setting_box">
                            <div class="o_setting_left_pane">
                                <field name="module_excel_import_export"/>
                            </div>
                            <div class="o_setting_right_pane">
                                <label for="module_excel_import_export"
                                       string="Excel Import Export"/>
                                <div class="text-muted">
                                    System tools used to import/export/report in XLSX with ease.
                                </div>
                            </div>
                        </div>
                        <div class="col-xs-12 col-md-6 o_setting_box">
                            <div class="o_setting_left_pane">
                                <field name="module_dbfilter_from_header"/>
                            </div>
                            <div class="o_setting_right_pane">
                                <label for="module_dbfilter_from_header"
                                       string="DB Filter from URL"/>
                                <div class="text-muted">
                                    Allow using URL to filter database.
                                </div>
                            </div>
                        </div>
                        <div class="col-xs-12 col-md-6 o_setting_box">
                            <div class="o_setting_left_pane">
                                <field name="module_module_analysis"/>
                            </div>
                            <div class="o_setting_right_pane">
                                <label for="module_module_analysis"
                                       string="Module Analysis"/>
                                <div class="text-muted">
                                    Module Analysis
                                </div>
                            </div>
                        </div>
                        <div class="col-xs-12 col-md-6 o_setting_box">
                            <div class="o_setting_left_pane">
                                <field name="module_date_range"/>
                            </div>
                            <div class="o_setting_right_pane">
                                <label for="module_date_range"
                                       string="Date Range"/>
                                <div class="text-muted">
                                    Date Range
                                </div>
                            </div>
                        </div>
                        <div class="col-xs-12 col-md-6 o_setting_box">
                            <div class="o_setting_left_pane">
                                <field name="module_web_m2x_options"/>
                            </div>
                            <div class="o_setting_right_pane">
                                <label for="module_web_m2x_options"
                                       string="Web M2X Options"/>
                                <div class="text-muted">
                                    Web M2X Options
                                </div>
                            </div>
                        </div>
                    </div>
                    <h2>Accounting</h2>
                    <div class="row mt16 o_settings_container">
                        <div class="col-xs-12 col-md-6 o_setting_box">
                            <div class="o_setting_left_pane">
                                <field name="module_l10n_th_partner"/>
                            </div>
                            <div class="o_setting_right_pane">
                                <label for="module_l10n_th_partner"
                                       string="TH Extra Fields"/>
                                <div class="text-muted">
                                    Add extra fields to partners, i.e., VAT
                                </div>
                            </div>
                        </div>
                        <div class="col-xs-12 col-md-6 o_setting_box">
                            <div class="o_setting_left_pane">
                                <field name="module_l10n_th_vendor_tax_invoice"/>
                            </div>
                            <div class="o_setting_right_pane">
                                <label for="module_l10n_th_vendor_tax_invoice"
                                       string="TH Vendor Tax Invoicing"/>
                                <div class="text-muted">
                                    Allow filling in vendor tax invoice for VAT/Undue VAT
                                </div>
                            </div>
                        </div>
                        <div class="col-xs-12 col-md-6 o_setting_box">
                            <div class="o_setting_left_pane">
                                <field name="module_l10n_th_withholding_tax_cert"/>
                            </div>
                            <div class="o_setting_right_pane">
                                <label for="module_l10n_th_withholding_tax_cert"
                                       string="TH Withholding Tax Certificate"/>
                                <div class="text-muted">
                                    Create/edit witholding tax certificate
                                </div>
                            </div>
                        </div>
                        <div class="col-xs-12 col-md-6 o_setting_box">
                            <div class="o_setting_left_pane">
                                <field name="module_l10n_th_withholding_tax_cert_form"/>
                            </div>
                            <div class="o_setting_right_pane">
                                <label for="module_l10n_th_withholding_tax_cert_form"
                                       string="TH Withholding Tax Certificate Form"/>
                                <div class="text-muted">
                                    Print standard witholding tax certificate
                                </div>
                            </div>
                        </div>
                        <div class="col-xs-12 col-md-6 o_setting_box">
                            <div class="o_setting_left_pane">
                                <field name="module_l10n_th_account_report"/>
                            </div>
                            <div class="o_setting_right_pane">
                                <label for="module_l10n_th_account_report"
                                       string="TH Accounting Reports"/>
                                <div class="text-muted">
                                    Additional reports, i.e., VAT, PND Reports
                                </div>
                            </div>
                        </div>
                        <div class="col-xs-12 col-md-6 o_setting_box">
                            <div class="o_setting_left_pane">
                                <field name="module_account_financial_report"/>
                            </div>
                            <div class="o_setting_right_pane">
                                <label for="module_account_financial_report"
                                       string="OCA Accounting Reports"/>
                                <div class="text-muted">
                                    Additional reports, General ledger,
                                    Trial Balance, Open Items, Aged Partner Balance,
                                    VAT Report, Journal Ledger
                                </div>
                            </div>
                        </div>
                        <div class="col-xs-12 col-md-6 o_setting_box">
                            <div class="o_setting_left_pane">
                                <field name="module_account_billing"/>
                            </div>
                            <div class="o_setting_right_pane">
                                <label for="module_account_billing"
                                       string="Account Billing"/>
                                <div class="text-muted">
                                    Account Billing
                                </div>
                            </div>
                        </div>
                    </div>
                    <h2>Purchasing</h2>
                    <div class="row mt16 o_settings_container">
                        <div class="col-xs-12 col-md-6 o_setting_box">
                            <div class="o_setting_left_pane">
                                <field name="module_purchase_deposit"/>
                            </div>
                            <div class="o_setting_right_pane">
                                <label for="module_purchase_deposit"
                                       string="Purchase Deposit"/>
                                <div class="text-muted">
                                    Purchase Deposit
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </xpath>
        </field>
    </record>

    <record id="action_ecofarm_config" model="ir.actions.act_window">
        <field name="name">Settings</field>
        <field name="type">ir.actions.act_window</field>
        <field name="res_model">res.config.settings</field>
        <field name="view_mode">form</field>
        <field name="target">inline</field>
        <field name="context">{'module': 'ecofarm'}</field>
    </record>

</odoo>
